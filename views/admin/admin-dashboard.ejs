<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Portal Dashboard</title>

   <script src="https://cdn.tailwindcss.com"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

   <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body class="bg-gray-100 font-sans">
    <!-- HEADER -->
    <header class="bg-[#002d6b] text-white px-8 py-4 flex justify-between items-center">
        <div class="flex items-center gap-4">
            <img src="" alt="logo" class="w-10">
            <h1 class="text-xl font-bold tracking-wide">WEB PORTAL</h1>
        </div>

        <div class="flex items-center gap-2">
            <span>Hi, <%= user.username %></span>
            <i class="fa-solid fa-user-tie text-2xl"></i>
        </div>
    </header>

    <!-- NAV -->
    <nav class="bg-gray-200 px-8 py-3 flex gap-4 text-sm font-medium">
        <a class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400 transition">Main Page</a>
        <a href="/dashboard-admin" class="px-4 py-2 rounded bg-blue-200 font-bold">Dashboard</a>
        <a href="/member-data" class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400">Member Data</a>
        <a href="/submit-case" class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400">Submit Case</a>
        <a class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400">Report</a>
    </nav>

    <div class="p-6">
        <h2 class="text-2xl font-semibold mb-6">Dashboard</h2>

        <!-- STATIC DASHBOARD CARDS -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <h2 class="text-3xl font-bold"><%= caseSubmitted %></h2>
                <p class="text-gray-600">Case Submitted</p>
            </div>
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <h2 class="text-3xl font-bold"><%= underReview %></h2>
                <p class="text-gray-600">Under Review</p>
            </div>
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <h2 class="text-3xl font-bold"><%= completed %></h2>
                <p class="text-gray-600">Completed</p>
            </div>
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <h2 class="text-3xl font-bold"><%= reports %></h2>
                <p class="text-gray-600">Reports</p>
            </div>
        </div>

        <!-- TOTAL MEMBER -->
        <div class="text-right mb-10">
            <h3 class="text-lg font-medium">Total Member</h3>
            <h1 class="text-4xl font-extrabold"><%= totalMember %></h1>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

    <!-- TABLE -->
    <div class="bg-white rounded shadow p-4">
        <h3 class="text-lg font-semibold mb-3">Recent Submission</h3>

        <div class="overflow-x-auto max-h-[280px]">
            <table class="w-full text-sm">
                <thead class="bg-gray-300">
                    <tr>
                        <th class="p-2 text-left">Submission ID</th>
                        <th class="p-2 text-left">Tanggal</th>
                        <th class="p-2 text-left">Status</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (recent.length === 0) { %>
                        <tr>
                            <td class="p-2 border" colspan="3">Belum ada data.</td>
                        </tr>
                    <% } %>

                    <% recent.forEach(r => { %>
                    <tr class="odd:bg-gray-50">
                        <td class="p-2 border"><%= r.id %></td>
                        <td class="p-2 border"><%= r.created_at.toLocaleDateString() %></td>
                        <td class="p-2 border"><%= r.status ?? "Submitted" %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- CHART -->
    <div class="bg-white rounded shadow p-4">
        <h3 class="text-lg font-semibold mb-3">Submission Chart</h3>

        <div class="h-[280px]">
            <canvas id="submissionChart"></canvas>
        </div>
    </div>

</div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const monthLabels = <%- JSON.stringify(chart.map(c => "Bulan " + c.bulan)) %>;
        const monthTotals = <%- JSON.stringify(chart.map(c => c.total)) %>;

        const ctx = document.getElementById('submissionChart').getContext('2d');
        
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'Jumlah Case',
                    data: monthTotals,
                    borderWidth: 2,
                    fill: false
                }]
            },
            options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
        y: { beginAtZero: true }
    }
}

        });
    </script>

</body>
</html>
